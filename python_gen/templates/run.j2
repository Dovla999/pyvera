{{sh}}

if [ ! -d ${HOME}/.virtualenvs/pyvera_{{service.name}}_venv ]; then
    python -m venv "${HOME}/.virtualenvs/pyvera_{{service.name}}_venv"
fi
. ${HOME}/.virtualenvs/pyvera_{{service.name}}_venv/bin/activate

pip install -U pip
pip install -U wheel
pip install -U --upgrade-strategy eager -r requirements.txt
uvicorn main:app --port {{service.port}} 
